<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csqf.personnelmanagementsys.mapper.IPositionDao">

    <sql id="selectAll">
        select * from t_employee_position
    </sql>

    <resultMap id="positionMap" type="position">
        <id column="pk_pid" property="pid" />
        <association column="fk_did" property="department" select="com.csqf.personnelmanagementsys.mapper.IDepartmentDao.getDepartmentByPKId" />
    </resultMap>

    <select id="getAllPosition" resultMap="positionMap">
        <include refid="selectAll"/>
    </select>

    <select id="getPositionByPKId" resultMap="positionMap">
        <include refid="selectAll"/> where pk_pid = #{pid}
    </select>

</mapper>