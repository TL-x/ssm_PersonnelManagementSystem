<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csqf.personnelmanagementsys.mapper.IEmployeeDao">

    <sql id="selectAll">
        select * from t_employee_infomation
    </sql>

    <resultMap id="employeeMap" type="employee">
        <id column="pk_eid" property="eid" />
        <result column="jointime" property="joinTime" />
        <result column="training" property="training" />
        <result column="boss" property="boss" />
        <association column="fk_pid" property="position" select="com.csqf.personnelmanagementsys.mapper.IPositionDao.getPositionByPKId" />
        <association column="fk_aid" property="archive" select="com.csqf.personnelmanagementsys.mapper.IArchiveDao.getArchiveByPKId" />
    </resultMap>

    <select id="getAllEmployee" resultMap="employeeMap">
        <include refid="selectAll"/>
    </select>

    <select id="getEmployeeByPKId" resultMap="employeeMap">
        <include refid="selectAll"/> where pk_eid = #{eid}
    </select>
</mapper>