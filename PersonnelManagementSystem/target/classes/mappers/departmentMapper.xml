<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csqf.personnelmanagementsys.mapper.IDepartmentDao">

    <sql id="selectAll">
        select * from t_employee_department
    </sql>

    <select id="getAllDepartment" resultType="department">
        <include refid="selectAll"/>
    </select>

    <select id="getDepartmentByPKId" resultType="department">
        <include refid="selectAll"/> where pk_did = #{did}
    </select>
</mapper>