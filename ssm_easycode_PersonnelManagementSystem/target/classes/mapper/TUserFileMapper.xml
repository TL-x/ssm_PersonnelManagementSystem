<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csqf.personnelmanagementsystem.dao.TUserFileDao">

    <resultMap type="com.csqf.personnelmanagementsystem.entity.TUserFile" id="TUserFileMap">
        <result property="pkFid" column="pk_fid" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="addr" column="addr" jdbcType="VARCHAR"/>
        <result property="crttime" column="crttime" jdbcType="TIMESTAMP"/>
        <result property="fkUid" column="fk_uid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TUserFileMap">
        select
          pk_fid, name, addr, crttime, fk_uid
        from d_PersonnelManagementSystem.t_user_file
        where pk_fid = #{pkFid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TUserFileMap">
        select
          pk_fid, name, addr, crttime, fk_uid
        from d_PersonnelManagementSystem.t_user_file
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TUserFileMap">
        select
          pk_fid, name, addr, crttime, fk_uid
        from d_PersonnelManagementSystem.t_user_file
        <where>
            <if test="pkFid != null">
                and pk_fid = #{pkFid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="addr != null and addr != ''">
                and addr = #{addr}
            </if>
            <if test="crttime != null">
                and crttime = #{crttime}
            </if>
            <if test="fkUid != null">
                and fk_uid = #{fkUid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="pkFid" useGeneratedKeys="true">
        insert into d_PersonnelManagementSystem.t_user_file(name, addr, crttime, fk_uid)
        values (#{name}, #{addr}, #{crttime}, #{fkUid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update d_PersonnelManagementSystem.t_user_file
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="addr != null and addr != ''">
                addr = #{addr},
            </if>
            <if test="crttime != null">
                crttime = #{crttime},
            </if>
            <if test="fkUid != null">
                fk_uid = #{fkUid},
            </if>
        </set>
        where pk_fid = #{pkFid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from d_PersonnelManagementSystem.t_user_file where pk_fid = #{pkFid}
    </delete>

</mapper>