<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csqf.personnelmanagementsystem.dao.TUserInformationDao">

    <resultMap type="com.csqf.personnelmanagementsystem.entity.TUserInformation" id="TUserInformationMap">
        <result property="pkUid" column="pk_uid" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="fkEid" column="fk_eid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TUserInformationMap">
        select
          pk_uid, username, password, fk_eid
        from d_PersonnelManagementSystem.t_user_information
        where pk_uid = #{pkUid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TUserInformationMap">
        select
          pk_uid, username, password, fk_eid
        from d_PersonnelManagementSystem.t_user_information
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TUserInformationMap">
        select
          pk_uid, username, password, fk_eid
        from d_PersonnelManagementSystem.t_user_information
        <where>
            <if test="pkUid != null">
                and pk_uid = #{pkUid}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="fkEid != null">
                and fk_eid = #{fkEid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="pkUid" useGeneratedKeys="true">
        insert into d_PersonnelManagementSystem.t_user_information(username, password, fk_eid)
        values (#{username}, #{password}, #{fkEid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update d_PersonnelManagementSystem.t_user_information
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="fkEid != null">
                fk_eid = #{fkEid},
            </if>
        </set>
        where pk_uid = #{pkUid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from d_PersonnelManagementSystem.t_user_information where pk_uid = #{pkUid}
    </delete>

</mapper>