<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csqf.personnelmanagementsystem.dao.TUserAttendanceDao">

    <resultMap type="com.csqf.personnelmanagementsystem.entity.TUserAttendance" id="TUserAttendanceMap">
        <result property="pkAtid" column="pk_atid" jdbcType="INTEGER"/>
        <result property="fkAttid" column="fk_attid" jdbcType="INTEGER"/>
        <result property="fkUid" column="fk_uid" jdbcType="INTEGER"/>
        <result property="date" column="date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TUserAttendanceMap">
        select
          pk_atid, fk_attid, fk_uid, date
        from d_PersonnelManagementSystem.t_user_attendance
        where pk_atid = #{pkAtid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TUserAttendanceMap">
        select
          pk_atid, fk_attid, fk_uid, date
        from d_PersonnelManagementSystem.t_user_attendance
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TUserAttendanceMap">
        select
          pk_atid, fk_attid, fk_uid, date
        from d_PersonnelManagementSystem.t_user_attendance
        <where>
            <if test="pkAtid != null">
                and pk_atid = #{pkAtid}
            </if>
            <if test="fkAttid != null">
                and fk_attid = #{fkAttid}
            </if>
            <if test="fkUid != null">
                and fk_uid = #{fkUid}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="pkAtid" useGeneratedKeys="true">
        insert into d_PersonnelManagementSystem.t_user_attendance(fk_attid, fk_uid, date)
        values (#{fkAttid}, #{fkUid}, #{date})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update d_PersonnelManagementSystem.t_user_attendance
        <set>
            <if test="fkAttid != null">
                fk_attid = #{fkAttid},
            </if>
            <if test="fkUid != null">
                fk_uid = #{fkUid},
            </if>
            <if test="date != null">
                date = #{date},
            </if>
        </set>
        where pk_atid = #{pkAtid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from d_PersonnelManagementSystem.t_user_attendance where pk_atid = #{pkAtid}
    </delete>

</mapper>