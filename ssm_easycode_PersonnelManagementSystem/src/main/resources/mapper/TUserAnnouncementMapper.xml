<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csqf.personnelmanagementsystem.dao.TUserAnnouncementDao">

    <resultMap type="com.csqf.personnelmanagementsystem.entity.TUserAnnouncement" id="TUserAnnouncementMap">
        <result property="pkAnid" column="pk_anid" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="details" column="details" jdbcType="VARCHAR"/>
        <result property="crttime" column="crttime" jdbcType="TIMESTAMP"/>
        <result property="fkUid" column="fk_uid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TUserAnnouncementMap">
        select
          pk_anid, name, details, crttime, fk_uid
        from d_PersonnelManagementSystem.t_user_announcement
        where pk_anid = #{pkAnid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TUserAnnouncementMap">
        select
          pk_anid, name, details, crttime, fk_uid
        from d_PersonnelManagementSystem.t_user_announcement
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TUserAnnouncementMap">
        select
          pk_anid, name, details, crttime, fk_uid
        from d_PersonnelManagementSystem.t_user_announcement
        <where>
            <if test="pkAnid != null">
                and pk_anid = #{pkAnid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="details != null and details != ''">
                and details = #{details}
            </if>
            <if test="crttime != null">
                and crttime = #{crttime}
            </if>
            <if test="fkUid != null">
                and fk_uid = #{fkUid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="pkAnid" useGeneratedKeys="true">
        insert into d_PersonnelManagementSystem.t_user_announcement(name, details, crttime, fk_uid)
        values (#{name}, #{details}, #{crttime}, #{fkUid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update d_PersonnelManagementSystem.t_user_announcement
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="details != null and details != ''">
                details = #{details},
            </if>
            <if test="crttime != null">
                crttime = #{crttime},
            </if>
            <if test="fkUid != null">
                fk_uid = #{fkUid},
            </if>
        </set>
        where pk_anid = #{pkAnid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from d_PersonnelManagementSystem.t_user_announcement where pk_anid = #{pkAnid}
    </delete>

</mapper>